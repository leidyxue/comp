<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.baifendian</groupId>
  <artifactId>bi</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>bi</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <skip.tests>true</skip.tests>
    <java.version>1.8</java.version>
    <spring.version>4.3.7.RELEASE</spring.version>
    <spring.boot.version>1.5.6.RELEASE</spring.boot.version>
    <mysql.version>5.1.32</mysql.version>
    <postgresql.version>42.1.4</postgresql.version>
    <kylin.jdbc.version>2.1.0</kylin.jdbc.version>
    <jackson-core-version>2.8.6</jackson-core-version>
    <tomcat.version>7.0.25</tomcat.version>
    <commons-lang3.version>3.5</commons-lang3.version>
    <logback.version>1.1.7</logback.version>
    <jersey-bundle.version>1.19.3</jersey-bundle.version>
    <shiro.version>1.4.0-RC2</shiro.version>
    <systemmanager.version>1.4.RELEASE</systemmanager.version>
  </properties>

  <modules>
    <module>dao</module>
    <module>api</module>
    <module>common</module>
    <module>engine</module>
    <module>rpc</module>
  </modules>

  <!-- 增加一个源，用来从github上获取jar包 -->
  <repositories>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
    <repository>
      <!-- Maven 自带的中央仓库使用的Id为central 如果其他的仓库声明也是用该Id
      就会覆盖中央仓库的配置 -->
      <id>baifendian</id>
      <name>baifendian</name>
      <url>http://maven.baifendian.com/service/local/repositories/Releases/content</url>
      <layout>default</layout>
    </repository>
  </repositories>

  <dependencyManagement>
    <dependencies>
      <!-- 单元测试 -->
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.12</version>
        <scope>test</scope>
      </dependency>

      <dependency>
        <groupId>org.projectlombok</groupId>
        <artifactId>lombok</artifactId>
        <version>1.16.16</version>
        <scope>provided</scope>
      </dependency>

      <dependency>
        <groupId>jdk.tools</groupId>
        <artifactId>jdk.tools</artifactId>
        <version>${java.version}</version>
        <scope>system</scope>
        <systemPath>${java.home}/../lib/tools.jar</systemPath>
      </dependency>

      <dependency>
        <groupId>javax.servlet</groupId>
        <artifactId>javax.servlet-api</artifactId>
        <version>3.1.0</version>
      </dependency>

      <!-- spring -->
