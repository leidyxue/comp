<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>deploy</id>
  <formats>
    <format>tar.gz</format>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <excludes>
        <exclude>junit:junit</exclude>
        <exclude>javax.servlet:servlet-api</exclude>
        <exclude>org.eclipse.jetty.aggregate:jetty-all</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.parent.basedir}/dao/src/main/resources/dao</directory>
      <outputDirectory>conf/dao</outputDirectory>
      <includes>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
        <include>**/*.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.parent.basedir}/dao/src/main/resources/</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>${project.parent.basedir}/common/src/main/resources/</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>**/*.properties</include>
        <include>**/*.xml</include>
        <include>**/*.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/resources/i18n/messages_zh_CN.properties</source>
      <outputDirectory>conf/i18n</outputDirectory>
      <destName>messages.properties</destName>
    </file>
    <file>
      <source>src/main/resources/application_true.yml</source>
      <outputDirectory>conf/</outputDirectory>
      <destName>application.yml</destName>
    </file>
  </files>
</assembly>